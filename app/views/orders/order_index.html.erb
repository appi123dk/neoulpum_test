<% content_for :javascript do %>

<script type="text/javascript">  


var menu_array = [];
var use_point = 0;

function numberWithCommas(x) {
    return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
}

function append_menu(menu_arr){
    var total_price = 0;
    $(".append-menu").children().remove();
    $.grep(menu_arr, function(value){
        $(".append-menu").append(
            '<div class="form-group">' +
            '<div>' +
                '<div class="col-lg-2">' +
                    '<button class="btn btn-warning btn-circle menu-delete" type="button">' +
                        '<i class="fa fa-minus"></i>' +
                    '</button>' +
                '</div>' +
                '<input type="number" value="'+ value.id +'" readonly="readonly" style="display:none" name="menu_id[]">' +
                '<label class="col-lg-6 control-label" style="text-align:left; font-size:15px">'+ value.name +'</label>' +
                '<div class="col-lg-3">' +
                    '<input type="number" style="padding-left:5px; padding-right:5px; text-align:right; font-size: 15px" class="form-control" readonly="readonly" value="'+ value.unit +'" name="order_unit[]">' +
                '</div>' +
                '<div class="col-lg-1" style="text-align:left; font-size: 18px; margin-top: 4px; margin-left: -15px">' +
                    '개' +
                '</div>' +
            '</div>' +
            '</div>'
        ); 
        total_price += value.price * value.unit;
    });
    return total_price;
    // $("#total_price").text(total_price);
};

function add_new_price(){
    var price = append_menu(menu_array);
    var discount_price = price - use_point;
    $(".add-new-price").children().remove();
    $(".add-new-price").append(
        '<h3 style="text-align:right" class="font-bold">' +
            numberWithCommas( price )+ '원' +
        '</h3>' +
        '<h4 style="text-align:right"> - ' +
            numberWithCommas( use_point )+
        '</h4>' +
        '<hr>' 
        );
    $("#total_price").text(numberWithCommas(discount_price) + ' 원');
};

$(function(){
    $("body").addClass("mini-navbar")
    
    // 메뉴 클릭시 내역에 뜨도록 하는 구문
    $('.btn-menu').click(function(){
        var index = $('.btn-menu').index(this);
        var price = $('.btn-menu')[index].getAttribute('data-price');
        var number = $('.btn-menu')[index].getAttribute('data-menu');
        var name = $('.btn-menu')[index].getAttribute('data-title');

        var id_arr = [];
        var menu = {};
            menu.id = number;
            menu.name = name;
            menu.price = price;
            menu.unit = 1;

        var result = $.grep(menu_array, function(value){
            id_arr.push(value.id);
            return value.id == menu.id;
        });

        if (result.length == 0) {
            menu_array.push(menu);
        } else {
            var index_menu = $.inArray(menu.id, id_arr);
            menu_array[index_menu].unit += 1;
        };
        var price = append_menu(menu_array);
        $("#total_price").text(numberWithCommas(price) + ' 원');
        if (use_point != 0) {
            add_new_price();
        }
    });

    // 삭제버튼 클릭 시
    $(document).on('click', '.menu-delete', function(){
        var index = $('.menu-delete').index(this);
        console.log(index);
        var menu_id = $('.menu-delete').parent().next()[index].getAttribute('value');
        var find_menu = $.grep(menu_array, function(value){
            return value.id == menu_id
        });
        if (find_menu[0].unit == 1 ) {
            menu_array.splice($.inArray(find_menu[0], menu_array),1);
        } else {
            find_menu[0].unit -= 1;
        };
        var price = append_menu(menu_array);
        $("#total_price").text(numberWithCommas(price) + ' 원');
        if (use_point != 0) {
            add_new_price();
        }
    });

    $('.btn-cancel').click(function(){
        menu_array = [];
        var price = append_menu(menu_array);
        $("#total_price").text(numberWithCommas(price) + ' 원');
    });

    $('.find-user').click(function(){
        $.ajax({
            data: {
                user_number: $('#find_user').val()
            },
            url: "/orders/find_user",
            success: function(data){
                $(".user-info hr").remove();
                $(".user-point").remove();
                $(".user-info").append(
                    '<hr>' +
                    '<div class="alert alert-warning alert-dismissable user-point" style="padding-right:15px">'+
                        '<input type="text" id="user_point" name = "user_id" style="display:none" value="'+ data.id +'">'+
                        '<input type="number" name = "use_point" style="display:none" value="'+ use_point +'">'+
                        '<strong>' + data.user_name +' | </strong> 적립금 : '+ numberWithCommas(parseInt(data.user_money)) + '원'+
                        '<button aria-hidden="true" class="btn btn-xs btn-warning btn-point" style="float:right; margin-top: -1px;" type="button">사용</button>'+
                    '</div>'
                );
            }
        });
    });

    $(document).on('click', '.btn-point', function(){
        swal({  title: "적립금",
                text: "사용할 적립금을 입력하세요",
                type: "input",
                showCancelButton: true,
                closeOnConfirm: false,
                animation: "slide-from-top",
                inputPlaceholder: "사용할 적립금 입력" },
                function(inputValue){
                    if (inputValue === false)
                        return false;
                    if (inputValue === "") {
                        swal.showInputError("사용할 금액을 입력해주세요!");
                        return false
                    }
                    //AJAX 추가
                    $.ajax({
                        data: {
                            user_id: $("#user_point").val(),
                            user_point: inputValue
                        },
                        url: "/orders/user_point",
                        success: function(data){
                            use_point += parseInt(inputValue);
                            $(".user-point").remove();
                            $(".user-info").append(
                                '<div class="alert alert-warning alert-dismissable user-point" style="padding-right:15px">'+
                                    '<input type="text" id="user_point" name = "user_id" style="display:none" value="'+ data.id +'">'+
                                    '<input type="number" name = "use_point" style="display:none" value="'+ use_point +'">'+
                                    '<strong>' + data.user_name +' | </strong> 적립금 : '+ numberWithCommas(data.user_money) + '원'+
                                    '<button aria-hidden="true" class="btn btn-xs btn-warning btn-point" style="float:right; margin-top: -1px;" type="button">사용</button>'+
                                '</div>'
                            );
                            var price = append_menu(menu_array),
                                discount_price = price - use_point;
                            add_new_price();
                            $("#total_price").text(numberWithCommas(discount_price) + ' 원');
                        }
                    });
                    swal("적립금을 사용하였습니다", numberWithCommas( inputValue )+ "원 사용", "success");
                });
    });

});






</script>

