<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>CS현황</h2>
        <ol class="breadcrumb">
        <li>
            <a href="#">Home</a>
        </li>
        <li>
            <a>Users</a>
        </li>
        <li class="active">
            <strong>고객 CS현황</strong>
        </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>오프라인 CS현황</h5>
                </div>
                <div class="ibox-content">      
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>작성시기</th>
                                <th>이름</th>
                                <th>전화번호</th>
                                <th>내용</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- each문 작성 -->
                            <% @offcomments.each do |offcomment| %>   
                                <tr class="gradeC">
                                    <td style="text-align: center;"><%= offcomment.created_at.strftime("%Y-%m-%d") %></td>
                                    <td style="text-align: center;"><%= offcomment.user_name %></td>
                                    <td style="text-align: center;"><%= offcomment.user_number %></td>
                                    <td style="text-align: left;"><%= offcomment.user_content %></td>
                                </tr>
                            <% end %>
                            <!-- 끝 -->
                        </tbody>
                    </table>
                </div>
            <!-- <hr> -->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>온라인 CS현황</h5>
                </div>
                <div class="ibox-content">      
                    <table class="table table-striped table-bordered table-hover dataTables-example2">
                        <thead>
                            <tr>
                                <th>작성시기</th>
                                <th>이름</th>
                                <th>전화번호</th>
                                <th>내용</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- each문 작성 -->
                            <% @comments.each do |comment| %>   
                                <tr class="gradeC">
                                    <td style="text-align: center;"><%= comment.created_at.strftime("%Y-%m-%d") %></td>
                                    <td style="text-align: center;"><%= comment.user.user_name %></td>
                                    <td style="text-align: center;"><%= comment.user.user_number %></td>
                                    <td style="text-align: left;"><%= comment.cs_content %></td>
                                </tr>
                            <% end %>
                            <!-- 끝 -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.dataTables-example').DataTable({
            order: [0,'desc'],
        dom: '<"html5buttons"B>lTfgitp',
        buttons: [
            { extend: 'copy'},
            {extend: 'csv'},
            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                }
            }
        ]

    });

    $('.dataTables-example2').DataTable({
            order: [0,'desc'],
        dom: '<"html5buttons"B>lTfgitp',
        buttons: [

            { extend: 'copy'},
            {extend: 'csv'},
            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                }
            }
        ]

    });
});

</script>

<% end %>