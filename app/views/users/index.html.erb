<div class="wrapper wrapper-content animated fadeInRight">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>목록</h5>

                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" style="padding-bottom: 0px;">
                <input type="text" class="form-control input-sm m-b-xs" id="filter"
                       placeholder="검색">

                    <table class="footable table table-stripped" data-page-size="5" data-filter=#filter>
                    <thead>
                    <tr>
                        <th>유저 ID</th>
                        <th>이메일</th>
                        <th data-hide="phone,tablet">이름</th>
                        <th>전화번호</th>
                        <th data-hide="phone,tablet">직업</th>
                        <th data-hide="phone,tablet">학과</th>
                        <th data-hide="phone,tablet">적립금</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @users.each do |user| %>
                        <tr class="user-list">
                            <td data-user="<%= user.id %>" class="center user-id"><%= user.id %></td>
                            <td class="center"><%= user.user_email %></td>
                            <td class="center"><%= user.user_name %></td>
                            <td class="center"><%= user.user_number %></td>
                            <td class="center">학생</td>
                            <td class="center">호텔관광대학</td>
                            <td class="center"><%= user.user_money %></td>
                        </tr>
                    <% end %>
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="7">
                            <ul class="pagination pull-right"></ul>
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row" style="margin-bottom: 30px" id="find_user">
</div>


</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {
    $('.footable').footable();
    $('.footable2').footable();

    $('.user-list').click(function(){
        $('.user-list').css({'background-color':'', 'color': ''});
        $(this).css({'background-color':'#1ab394', 'color': 'white'})
        var index = $('.user-list').index(this);
        var n = $('.user-id')[index].getAttribute('data-user');
        // var n = $(this).children().eq(0).getAttribute('data-user');
        $.ajax({
            data: {
                user_id: n
            },
            url: "/users/index",
            success: function(data){
                $(".user-info").remove();
                var txt = data.id;
                $("#find_user").append(
                    '<div class="col-lg-12 animated fadeIn user-info">' +
                        '<div class="widget-head-color-box navy-bg p-lg text-center">' +
                            '<div class="m-b-md">' +
                                '<h3 class="font-bold no-margins">' +
                                    data.user_name + '(' + data.user_number + ')' +
                                '</h3>' +
                            '</div>' +
                            '<h1 class="font-bold"> 선입금 : ' + data.user_money + ' 원</h1>' +
                        '</div>' +
                        '<div class="widget-text-box">' +
                        '<form action="/users/money/' + data.id + '" method="GET">' +
                            '<div class="input-group">' + 
                            '<input name="user_money" type="number" class="form-control" placeholder="선결재 금액을 입력해주세요"> <span class="input-group-btn"> <button type="submit" class="btn btn-warning">적립'+
                            '</button> </span></div>' +
                            '</div>' +
                        '</form>' +    
                    '</div>' 
                );
            }
        });
    });    
});




</script>

<% end %>