<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
      <h2>지출현황</h2>
      <ol class="breadcrumb">
          <li>	
              <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
	        </li>
	        <li>
	            <a>비용</a>
	        </li>
	        <li class="active">
	            <strong>지출내역</strong>
	        </li>
	    </ol>
	</div>
	<div class="col-lg-2">

	</div>
</div>	
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
				    <h5>늘품 지출내역</h5>
				</div>
				<div class="ibox-content">		
					<table class="table table-striped table-bordered table-hover dataTables-example">
						<thead>
							<tr>
							    <th>날짜</th>
							    <th>분류</th>
							    <th>내용</th>
							    <th>금액</th>
							</tr>
						</thead>
						<tbody>
								<!-- each문 작성 -->
							<% @payments.each do |payment| %>	
								<tr class="gradeC">
								    <td><%= payment.buy_date %></td>
								    <td style="text-align: right;"><%= @category[:"#{payment.category}"] %></td>
								    <td style="text-align: right;"><%= payment.buy_content %></td>
								    <td style="text-align: right;"><%= number_with_delimiter(payment.price.to_i, dilimiter:',') %> 원</td>
								</tr>
							<% end %>
								<!-- 끝 -->
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
				    <h5>재료구매비 내역</h5>
				</div>
				<div class="ibox-content">		
					<table class="table table-striped table-bordered table-hover dataTables-example2">
						<thead>
							<tr>
							    <th>날짜</th>
							    <th>요청지기</th>
							    <th>구매재료</th>
							    <th>구매금</th>
							</tr>
						</thead>
						<tbody>
								<!-- each문 작성 -->
							<% @requests.each do |request| %>	
								<tr class="gradeC">
								    <td><%= request.buy_date %></td>
								    <td style="text-align: right;"><%= Employee.find(request.employee_id).employee_name %></td>
								    <td style="text-align: right;"><%= Material.find(request.material_id).material_name %></td>
								    <td style="text-align: right;"><%= number_with_delimiter(request.buy_price.to_i, dilimiter:',') %> 원</td>
								</tr>
							<% end %>
								<!-- 끝 -->
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.dataTables-example').DataTable({
    		order: [0,'desc'],
        dom: '<"html5buttons"B>lTfgitp',
        buttons: [
            { extend: 'copy'},
            {extend: 'csv'},
            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                }
            }
        ]

    });

    $('.dataTables-example2').DataTable({
    		order: [0,'desc'],
        dom: '<"html5buttons"B>lTfgitp',
        buttons: [

            { extend: 'copy'},
            {extend: 'csv'},
            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                }
            }
        ]

    });

});

</script>

<% end %>